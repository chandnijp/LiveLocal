<%- include ("../partials/header") %>

<div class="container form-container">	
  <div class="row form-section">
	<h1>Edit <%= destination.name %></h1>
	<div class="form-newhome">
	  <form action="/destinations/<%= destination._id %>?_method=PUT" method="POST">
		<div class="row">
		  <div class="col-md-6">
			<div class="form-group">
			  <input class="form-control" type="text" name="destination[name]" placeholder="name" value="<%= destination.name %>">
			</div>
			<div class="form-group">
			  <input class="form-control" type="text" name="destination[location]" placeholder="location" value="<%= destination.location %>">
			</div>
			<div class="form-group">
			  <input class="form-control" type="number" name="destination[cost]" placeholder="price" value="<%= destination.cost %>" min="0" step="0.01" required>
			</div>
			<div class="form-group">
			  <input class="form-control" type="text" name="destination[image]" placeholder="image url" value="<%= destination.image %>">
			</div>
		  </div>
		  <div class="col-md-6">
			<div class="form-group">
			  <textarea class="form-control" type="text" name="destination[summary]" placeholder="summary" rows="1"><%= destination.summary %></textarea>
			</div>
			<div class="form-group">
			  <textarea class="form-control" type="text" name="destination[description]" placeholder="all information about your HolidayHome goes here..." rows="2"><%= destination.description %></textarea>
			</div>
			<div class="form-group">
			  <textarea class="form-control" type="text" name="destination[neighbourhood]" placeholder="information about the neighbourhood goes here..." rows="2"><%= destination.neighbourhood %></textarea>
			</div>			  
		  </div>
		</div>
		<div class="btn-newhome">
		  <button class="btn btn-primary btn-lg btn-block">Save</button>
		</div>
	  </form>
	  <a href="/destinations">Go Back</a>
	</div>
  </div>
</div>

<%- include ("../partials/footer") %>